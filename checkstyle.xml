<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name = "Checker">
    <module name="TreeWalker">
<!--        doesn't build with unused imports-->
        <module name="UnusedImports" />
<!--        overridden messages need the @Override notation-->
        <module name="MissingOverride"/>
<!--        checks JavaDoc statements start from the second line-->
        <module name="JavadocContentLocationCheck"/>
<!--        JavaDoc lines without a leading asterisk -->
        <module name="JavadocMissingLeadingAsterisk"/>
<!--        JavaDoc must end with proper punctuation-->
        <module name="JavadocStyle">
            <property name="checkFirstSentence" value="false"/>
        </module>
<!--        ensures the names of abstract classes conform to a pattern-->
        <module name="AbstractClassName"/>
<!--        Spaces between method name and parameters passed are not allowed-->
        <module name="MethodParamPad"/>
<!--        No wrapping around a line in import and package statements, more visually pleasing-->
        <module name="NoLineWrap"/>
<!--        No spaces before tokens-->
        <module name="NoWhitespaceBefore"/>
<!--        No spaces before case statement tokens-->
        <module name="NoWhitespaceBeforeCaseDefaultColon"/>

    </module>


    <!-- TODO: decide in your team with other checkers to add! -->


</module>
